<div class="container">
  <h2>New Payment</h2>
  <%= form_with model: @payment, local: true do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :amount %>
      <%= form.number_field :amount, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :category_id %>
      <%= form.select :category_id, Category.all.map { |c| [c.name, c.id] }, { prompt: 'Select a category' }, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= form.submit 'Create Payment', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Back', root_path, class: 'btn btn-secondary' %>
</div>
