<div class="container">
  <h2>Add New Category</h2>
  <%= form_for @category, html: { multipart: true } do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
  <%= f.label :icon, 'Select an icon:' %>
  <%= f.select :icon, Category.available_icons, {}, class: 'form-control' %>
</div>

    <div class="actions">
      <%= f.submit 'Save', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Back', categories_path, class: 'btn btn-secondary' %>
</div>

