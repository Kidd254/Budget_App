<div class="container d-flex flex-column justify-content-center bg-light">
  <div class="container d-flex mb-3 mt-3">
    <div class="col-md-2">
      <img class="icon" src="<%= asset_path('category_icons/' + @category.icon) %>" alt="<%= @category.name %> Icon">
    </div>
    <div class="col-md-10 d-flex align-items-center"> 
      <h1><%= @category.name %></h1>
    </div>
  </div>

  <hr />

  <div class="col-md-12 col-12 p-2 ml-3"> 
    <p><%= @category.description %></p>
  </div>

  <ul class="list-unstyled ml-3">
    <% @payments.each do |payment| %>
      <li class="ml-3">
        <div class="col-md-12 col-12 d-flex flex-column ml-3">
          <div class="col-md-12 col-12 d-flex p-3">
            <div class="row col-md-10">
              <%= payment.name %>
            </div>
            <div class="col-md-2 col-12 d-flex justify-content-end"> $<%= payment.amount %> </div>
          </div>

          <div class="col-md-12 d-flex ml-5"> 
            <%= payment.created_at.strftime('%d %b %Y') %>
          </div>
        </div>
      </li>
    <% end %>
           <hr />

    <div class="col-md-12 col-12 d-flex p-2 ml-3"> 
      <div class="col-md-10 col-12 d-flex justify-content-start">TOTAL PAYMENT</div>
      <hr />
      <div class="col-md-2 col-12 d-flex justify-content-end mr-1"> $<%= @total_amount %></div>
    </div>
  </ul>

  <hr />

  <div class="col-md-12 d-flex mb-4 ml-3"> 
    <div class="col-md-4 col-12">
      <%= link_to "Add New Transaction", new_payment_path, class: "btn btn-secondary" %>
    </div>
    <div class="col-md-4 offset-md-4 col-12 d-flex justify-content-end">
    </div>
  </div>
</div>
