<div class="container  d-flex flex-column justify-content-center">
<div class= "container d-flex mb-3">
<div class="col-md-2">
  <img class="icon" src="<%= asset_path('category_icons/' + @category.icon) %>" alt="<%= @category.name %> Icon">
  </div>
  <div class="col-md-3 d-flex align-items-center">
  <h1><%= @category.name %></h1>
  </div>
</div>

<ul class="list-unstyled">
  <% @payments.each do |payment| %>
    <li>
    <div class="col-md-12 col-12 d-flex flex-column ml-3">
    <div class="col-md-12 col-12 d-flex">
    <div class="row col-md-10">
      <%= payment.name %>
      </div>
      <div class="col-md-2 col-12 d-flex justify-content-end"> $<%= payment.amount %> </div>
      </div>
      <div>
       <%= payment.created_at.strftime('%d %b %Y') %>
      </div>
      </div>
    </li>
  <% end %>
  
  <div class="col-md-12 col-12 d-flex">
  <div class="col-md-10 col-12">Total Amount: </div>
  <hr/>
  <div class="col-md-2 col-12 d-flex justify-content-end mr-1"> $<%= @total_amount %></div></div>
</ul>
<div class="col-md-12 d-flex mb-4">
<div class="col-md-4 col-12">
<%= link_to "Add New Transaction", new_payment_path, class: "btn btn-secondary"%>
</div>
<div class="col-md-4 offset-md-4 col-12 d-flex justify-content-end">
<%= link_to "Back", root_path, class: "btn btn-secondary" %>
</div>
</div>
</div>
</div>
